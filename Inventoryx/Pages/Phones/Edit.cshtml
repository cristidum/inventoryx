@page
@model Inventoryx.Pages.Phones.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Phone</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Phone.PhoneId" />
            <div class="form-group">
                <label asp-for="Phone.Name" class="control-label"></label>
                <input asp-for="Phone.Name" class="form-control" />
                <span asp-validation-for="Phone.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.SerialNumber" class="control-label"></label>
                <input asp-for="Phone.SerialNumber" class="form-control" />
                <span asp-validation-for="Phone.SerialNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.AcquisitionCompany" class="control-label"></label>
                <input asp-for="Phone.AcquisitionCompany" class="form-control" />
                <span asp-validation-for="Phone.AcquisitionCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.Status" class="control-label"></label>
                <select asp-for="Phone.Status" class="form-control"></select>
                <span asp-validation-for="Phone.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.Location" class="control-label"></label>
                <input asp-for="Phone.Location" class="form-control" />
                <span asp-validation-for="Phone.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.Details" class="control-label"></label>
                <input asp-for="Phone.Details" class="form-control" />
                <span asp-validation-for="Phone.Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
